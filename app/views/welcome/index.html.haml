#spinner-container
  %div{"data-bind" => "visible: showSpinner"}
    %h4 Chargement de vos creations...
    .spinner


%div{"data-bind" => "visible: showTable"}
  %table.table.table-hover
    %thead
      %tr
        %th
          %input{:type => 'checkbox', 'data-bind' => 'checked: checkAll, click: toogleCreations'}
            Tous
        %th
          Id
        %th
          Titre
        %th
          Actions
    %tbody{"data-bind"=>'foreach: items'}
      %tr
        %td
          %input{:type => 'checkbox', 'data-bind' => 'checked: $data.checked'}
        %td{"data-bind"=>'text: $data.id'}
        %td{"data-bind"=>'text: $data.title'}
        %td
          %button.btn.btn-success.btn-xs{:type => "button"} Publier
          %button.btn.btn-danger.btn-xs{:type => "button"} Supprimer


  %button.btn.btn-success{:type => "button"} Publier la sélection
  %button.btn.btn-danger{:type => "button"} Supprimer la sélection

